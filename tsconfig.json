{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2021",
    "module": "es2022",
    "lib": ["es2021"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ],
  "include": [
    "src/**/*"
  ]
}
